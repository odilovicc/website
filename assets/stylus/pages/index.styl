.dashboard {
    &-wrapper {
        font-family "Montserrat", sans-serif
        min-height 100dvh
        min-width 100vw
        display flex
        justify-content center
        align-items center
        color var(--white-color)
        font-weight 600
        font-size 32px
    }
    &-title {
        img {
            width 150px
            height 150px
            border-radius 50%
            margin 0 auto
            margin-bottom 50px
        }
        &-name {
            color var(--secondary-color)
        }
    }
    &-typing {
        display flex
        justify-content center
        margin 0 auto
        text-align center
    }
    &-socials {
        display flex
        flex-direction column
        gap 20px
        position absolute
        left 50px

        i {
            font-size 24px
            transition 0.5s all
            
            &:hover {
                transform scale(2.5)
                margin 25px 0
                cursor pointer
            }
        }
    }
}

@media (min-width: 360px) and (max-width: 768px) {
    .dashboard {
        &-title {
            font-size 18px
            
            img {
                width 100px
                height 100px
            }
        }
        &-socials {
            top 20px
            flex-direction row
            left: 0; 
            right: 0; 
            margin-inline: auto; 
            width: fit-content;
        }
    }
}

#tsparticles {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}